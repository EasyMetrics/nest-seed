{
  "name": "nest-seed",
  "version": "0.0.1",
  "description": "nest-js-seed-project",
  "author": "joshua-wiens",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve:dev",
    "build": "npm run lint && npm run transpile",
    "build:config:copy": "copyfiles .env dist",
    "build:copyfiles": "npm run build:config:copy &&  npm run build:package:copy && npm run build:pm2:copy",
    "build:dist": "npm run clean:dist &&  npm run build:copyfiles && npm run transpile",
    "build:package:copy": "copyfiles package.json dist",
    "build:pm2:copy": "copyfiles process.yml dist",
    "certs": "bash ./.ssl/generateLocalCerts.sh 'localhost'",
    "clean": "npm run clean:dist",
    "clean:all": "npm run clean:coverage && npm run clean:dist",
    "clean:coverage": "rimraf './coverage'",
    "clean:dist": "rimraf './dist'",
    "ci:e2e": "jest --runInBand --config ./test/jest-e2e.json",
    "ci:test": "jest  --runInBand",
    "ci:test:coverage": "jest --runInBand --coverage",
    "ci:lint:commits": "commitlint --from=${CIRCLE_BRANCH} --to=${CIRCLE_SHA1}",
    "commitlint": "commitlint",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "format": "prettier --write \"**/*.ts\"",
    "lint-staged": "lint-staged",
    "lint": "tslint --project tsconfig.json \"src/**/*.ts\" --exclude \"src/**/*.d.ts\" ",
    "report-codeclimate": "codeclimate-test-reporter < coverage/lcov.info",
    "release": "standard-version",
    "security": "nsp check",
    "serve:dev": "nodemon --watch src --watch .env",
    "serve:dist": "node dist/server.js",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "transpile": "tsc",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.0",
    "@nestjs/core": "^5.0.0",
    "@nestjs/microservices": "^5.0.0",
    "@nestjs/testing": "^5.0.0",
    "@nestjs/websockets": "^5.0.0",
    "chalk": "^2.4.1",
    "compression": "^1.7.2",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express-jwt": "^5.3.1",
    "express-jwt-authz": "^1.0.0",
    "fastify-formbody": "^2.0.0",
    "helmet": "^3.12.1",
    "jwks-rsa": "^1.2.1",
    "read-pkg": "^3.0.0",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "tslib": "^1.9.2",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.0.39",
    "@types/express-jwt": "0.0.40",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.3.0",
    "@types/supertest": "^2.0.4",
    "codeclimate-test-reporter": "^0.5.0",
    "copyfiles": "^2.0.0",
    "cross-env": "^5.1.6",
    "del": "^3.0.0",
    "del-cli": "^1.1.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^7.1.3",
    "nodemon": "^1.14.1",
    "nsp": "^3.2.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.11.1",
    "selfsigned": "^1.10.3",
    "standard-version": "^4.4.0",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.1.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  },
  "repository": "git@github.com:EasyMetrics/nest-seed.git"
}
